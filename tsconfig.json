{
  "compilerOptions": {
    "target": "es2016",
    /* Modules */
    "module": "commonjs",
    // "rootDir": "./",   
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "lib",
    /* Emit */
    "noEmit": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}